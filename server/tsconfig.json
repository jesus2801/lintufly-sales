{
  "compilerOptions": {
    "baseUrl": "./src",
    "outDir": "./dist",
    "target": "es5",
    "module": "commonjs",
    "removeComments": true,
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "types": ["jest"],
    "paths": {
      "@config/*": ["config/*"],
      "@functions/*": ["functions/*"],
      "@interfaces/*": ["interfaces/*"],
      "@models/*": ["models/*"],
      "@graphql/*": ["graphql/*"]
    }
  },
  "exclude": ["node_modules", "__test__"],
  "include": ["src", "**/.graphql"]
}
