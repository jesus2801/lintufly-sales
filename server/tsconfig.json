{
  "compilerOptions": {
    "baseUrl": "./",
    "outDir": "./dist",
    "target": "es5",
    "module": "commonjs",
    "removeComments": true,
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "exclude": ["node_modules", "__test__"],
  "include": ["src"]
}
